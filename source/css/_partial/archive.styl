.archive {
  margin-top: 5%;
  flex:66.67%;
}
.archive-title{
margin-left:20px;
font-size: 1.5em;
}

.archive-number{
margin-left:20px;
font-size: .8em;

color: rgb(110, 110, 110);
}

.archive-year{
  margin-left:20px;
  font-size: 1.5em;
  color: rgb(110, 110, 110);
}

.post-archive {
  list-style: none;
}

.catelist{
margin-top:5%;
}
.catelist a {
margin-left:20px;
font-size: 1.5em;
color: rgb(110, 110, 110);
text-decoration: none;
}

.catelist a:hover{
    color: #006600;
    padding-left: 1em;
    -webkit-transition: 0.1s;
    -moz-transition: 0.1s;
    -ms-transition: 0.1s;
    -o-transition: 0.1s;
}
